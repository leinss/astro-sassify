---
import i18n from "../assets/i18n.json"
import {
  BsSearch,
  BsDatabase,
  BsFolderSymlink,
  BsGraphUp,
  BsPersonVcard
} from "react-icons/bs"
import {
  MdOutlinePeople,
  MdOutlineIntegrationInstructions,
  MdOutlineAutoGraph,
  MdOutlineMarkEmailUnread
} from "react-icons/md"
import {
  AiOutlineRobot,
  AiOutlineCustomerService,
  AiOutlineUserSwitch,
  AiOutlineFundProjectionScreen
} from "react-icons/ai"
import {
  TbBrandGravatar,
  TbTargetArrow,
  TbUsersGroup
} from "react-icons/tb"
import { BiMessageDetail } from "react-icons/bi"
---

<section class="relative py-20 bg-white dark:bg-gray-900" id="problem">
  <div class="container-custom">
    <!-- Problems Section -->
    <div class="space-y-12 mb-20 slide-up">
      <div class="text-center space-y-4 max-w-3xl mx-auto">
        <h2 class="font-bold text-red-600 dark:text-red-400">
          {i18n.de.problem_solution.problem_headline}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.problem_subline}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <div class="order-2 lg:order-1">
          <div class="grid sm:grid-cols-2 gap-6">
        {
          [1, 2, 3, 4, 5].map((num) => (
            <div class="flex items-start gap-4 p-6 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800 transition-all hover:shadow-md">
              <span class="text-red-600 dark:text-red-400 mt-1 shrink-0">
                {num === 1 ? (
                  <BsFolderSymlink className="w-5 h-5 md:w-6 md:h-6" /> // Data jungle/scattered info
                ) : num === 2 ? (
                  <AiOutlineUserSwitch className="w-5 h-5 md:w-6 md:h-6" /> // New employees/onboarding
                ) : num === 3 ? (
                  <AiOutlineCustomerService className="w-5 h-5 md:w-6 md:h-6" /> // Customer service
                ) : num === 4 ? (
                  <BsGraphUp className="w-5 h-5 md:w-6 md:h-6" /> // Growth/scaling
                ) : num === 5 ? (
                  <BiMessageDetail className="w-5 h-5 md:w-6 md:h-6" /> // Communication channels
                ) : num === 6 ? (
                  <MdOutlineMarkEmailUnread className="w-5 h-5 md:w-6 md:h-6" /> // Marketing
                ) : num === 7 ? (
                  <TbBrandGravatar className="w-5 h-5 md:w-6 md:h-6" /> // Brand communication
                ) : num === 8 ? (
                  <AiOutlineFundProjectionScreen className="w-5 h-5 md:w-6 md:h-6" /> // Content scale
                ) : num === 9 ? (
                  <TbTargetArrow className="w-5 h-5 md:w-6 md:h-6" /> // Lead qualification
                ) : (
                  <MdOutlineAutoGraph className="w-5 h-5 md:w-6 md:h-6" /> // Customer insights
                )}
              </span>
              <div>
                <h3 class="mb-2 text-gray-900 dark:text-white">
                  {
                    i18n.de.problem_solution[
                      `problem_${num}_headline` as keyof typeof i18n.de.problem_solution
                    ]
                  }
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  {
                    i18n.de.problem_solution[
                      `problem_${num}_text` as keyof typeof i18n.de.problem_solution
                    ]
                  }
                </p>
              </div>
            </div>
          ))
        }
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <img
            src="/astro-sassify/images/content/problems.png"
            alt="Common Business Problems"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
      </div>
    </div>

    <!-- Solutions Section -->
    <div class="space-y-12 slide-up">
      <div class="text-center space-y-4 max-w-3xl mx-auto">
        <h2 class="font-bold text-primary-600 dark:text-primary-400">
          {i18n.de.problem_solution.solution_headline}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.solution_subline}
        </p>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.solution_footer}
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <div class="order-2 lg:order-2">
          <div class="grid sm:grid-cols-2 gap-6">
        {
          [1, 2, 3, 4, 5, 6].map((num) => (
            <div class="flex items-start gap-4 p-6 rounded-lg bg-primary-50 dark:bg-primary-900/20 border border-primary-100 dark:border-primary-800 transition-all hover:shadow-md">
              <span class="text-primary-600 dark:text-primary-400 mt-1 shrink-0">
                {num === 1 ? (
                  <BsDatabase className="w-5 h-5 md:w-6 md:h-6" /> // Knowledge database
                ) : num === 2 ? (
                  <AiOutlineRobot className="w-5 h-5 md:w-6 md:h-6" /> // AI-supported onboarding
                ) : num === 3 ? (
                  <MdOutlineIntegrationInstructions className="w-5 h-5 md:w-6 md:h-6" /> // Omnichannel service
                ) : num === 4 ? (
                  <TbUsersGroup className="w-5 h-5 md:w-6 md:h-6" /> // Personalized communication
                ) : num === 5 ? (
                  <BsPersonVcard className="w-5 h-5 md:w-6 md:h-6" /> // Lead qualification
                ) : (
                  <MdOutlineAutoGraph className="w-5 h-5 md:w-6 md:h-6" /> // Customer insights
                )}
              </span>
              <div>
                <p class="text-gray-600 dark:text-gray-300">
                  <span class="font-bold">
                    {
                      i18n.de.problem_solution[
                        `solution_${num}_headline` as keyof typeof i18n.de.problem_solution
                      ]
                    }
                  </span>{" "}
                  -
                  {
                    i18n.de.problem_solution[
                      `solution_${num}_text` as keyof typeof i18n.de.problem_solution
                    ]
                  }
                </p>
              </div>
            </div>
          ))
        }
          </div>
        </div>
        <div class="order-1 lg:order-1">
          <img
            src="/astro-sassify/images/content/solutions.png"
            alt="Our Business Solutions"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>
