---
import i18n from "../assets/i18n.json"
import {
  BsDatabase,
  BsGraphUp,
} from "react-icons/bs"
import {
  RiCustomerService2Line,
} from "react-icons/ri"
import {
  AiOutlineRobot,
  AiOutlineCustomerService,
  AiOutlineUserSwitch,
} from "react-icons/ai"
import { TbUsersGroup } from "react-icons/tb"
import config from "../assets/config.ts"
import { FaUserClock } from "react-icons/fa"
import { Image } from 'astro:assets';
import problems from "../assets/images/content/problems.png"
import solutions from "../assets/images/content/solutions.png"
---

<section class="relative py-20 bg-white dark:bg-gray-900" id="problem">
  <div class="container-custom">
    <!-- Problems Section -->
    <div class="space-y-12 mb-20 slide-up">
      <div class="text-center space-y-4 max-w-3xl mx-auto">
        <h2 class="font-bold text-red-600 dark:text-red-400">
          {i18n.de.problem_solution.problem_headline}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.problem_subline}
        </p>
      </div>

      <div class="space-y-8">
        <div class="max-w-4xl mx-auto">
          <Image
            src={problems}
            alt="Common Business Problems"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
        <div class="grid sm:grid-cols-2 gap-6">
          {
            [1, 2, 3, 4].map((num) => (
              <div class="flex items-start gap-4 p-6 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-100 dark:border-red-800 transition-all hover:shadow-md">
                <span class="text-red-600 dark:text-red-400 mt-1 shrink-0 sm:mt-1">
                  {num === 1 ? (
                    <BsGraphUp className="w-5 h-5 md:w-6 md:h-6" /> // Data jungle/scattered info
                  ) : num === 2 ? (
                    <AiOutlineUserSwitch className="w-5 h-5 md:w-6 md:h-6" /> // New employees/onboarding
                  ) : num === 3 ? (
                    <AiOutlineCustomerService className="w-5 h-5 md:w-6 md:h-6" /> // Customer service
                  ) : num === 4 ? (
                    <FaUserClock className="w-5 h-5 md:w-6 md:h-6" /> // Growth/scaling
                  ) : null}
                </span>
                <div class="min-w-0 flex-1">
                  <h3 class="mb-2 text-gray-900 dark:text-white break-words">
                    {
                      i18n.de.problem_solution[
                        `problem_${num}_headline` as keyof typeof i18n.de.problem_solution
                      ]
                    }
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300">
                    {
                      i18n.de.problem_solution[
                        `problem_${num}_text` as keyof typeof i18n.de.problem_solution
                      ]
                    }
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Solutions Section -->
    <div class="space-y-12 slide-up">
      <div class="text-center space-y-4 max-w-3xl mx-auto">
        <h2 class="font-bold text-primary-600 dark:text-primary-400">
          {i18n.de.problem_solution.solution_headline}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.solution_subline}
        </p>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {i18n.de.problem_solution.solution_footer}
        </p>
      </div>

      <div class="space-y-8">
        <div class="max-w-4xl mx-auto">
          <Image
            src={solutions}
            alt="Our Business Solutions"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
        <div class="grid sm:grid-cols-2 gap-6">
          {
            [1, 2, 3, 4].map((num) => (
              <div class="flex items-start gap-4 p-6 rounded-lg bg-primary-50 dark:bg-primary-900/20 border border-primary-100 dark:border-primary-800 transition-all hover:shadow-md">
                <span class="text-primary-600 dark:text-primary-400 mt-1 shrink-0 sm:mt-1">
                  {num === 1 ? (
                    <BsDatabase className="w-5 h-5 md:w-6 md:h-6" /> // Knowledge database
                  ) : num === 2 ? (
                    <AiOutlineRobot className="w-5 h-5 md:w-6 md:h-6" /> // AI-supported onboarding
                  ) : num === 3 ? (
                    <TbUsersGroup className="w-5 h-5 md:w-6 md:h-6" /> // Omnichannel service
                  ) : num === 4 ? (
                    <RiCustomerService2Line className="w-5 h-5 md:w-6 md:h-6" /> // Personalized communication
                  ) : null}
                </span>
                <div class="min-w-0 flex-1">
                  <p class="text-gray-600 dark:text-gray-300 break-words">
                    <span class="font-bold">
                      {
                        i18n.de.problem_solution[
                          `solution_${num}_headline` as keyof typeof i18n.de.problem_solution
                        ]
                      }
                    </span>{" "}
                    -
                    {
                      i18n.de.problem_solution[
                        `solution_${num}_text` as keyof typeof i18n.de.problem_solution
                      ]
                    }
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="flex flex-wrap gap-4 mt-16 justify-center">
      <a
        href={config.external_links.strategy_call}
        class="btn-cta"
        target="_blank"
        rel="noopener noreferrer"
      >
        {i18n.de.hero.cta}
      </a>
    </div>
  </div>
</section>
