---
import { AiOutlineRobot } from "react-icons/ai"
import { BiAnalyse } from "react-icons/bi"
import { RiCustomerService2Line } from "react-icons/ri"
import { config } from "../assets/config"
import i18n from "../assets/i18n.json"
---

<section
  class="relative py-12 md:py-20 overflow-hidden hero-section bg-primary-50 dark:bg-primary-950 dark:to-secondary-950"
  id="hero"
>
  <div class="absolute inset-0 z-0 opacity-30">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>
  <div class="container-custom relative z-10">
    <div class="slide-up" transition:animate="slide">
      <h3
        class="text-secondary-600 dark:text-secondary-300 mb-6 font-light tracking-wide"
      >
        {i18n.de.hero.subline}
      </h3>
      <h1 class="mb-8 text-secondary-900 dark:text-white leading-tight">
        {i18n.de.hero.headline_start}<br />
        <span class="text-primary-600 dark:text-primary-400"
          >- {i18n.de.hero.headline_end}</span
        >
      </h1>
      <p
        class="text-base sm:text-lg md:text-xl text-secondary-600 dark:text-secondary-300 mb-12 md:mb-24 lg:mb-32 max-w-2xl leading-relaxed"
      >
        {i18n.de.hero.intro_text}
      </p>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <ul class="space-y-6 text-secondary-600 dark:text-secondary-300">
          {
            [1, 2, 3].map((num) => (
              <li>
                <div class="flex items-center mb-2">
                  <span class="inline-block mr-4 text-primary-600 dark:text-primary-400">
                    {num === 3 ? (
                      <RiCustomerService2Line className="w-5 h-5 md:w-6 md:h-6" />
                    ) : num === 2 ? (
                      <AiOutlineRobot className="w-5 h-5 md:w-6 md:h-6" />
                    ) : (
                      <BiAnalyse className="w-5 h-5 md:w-6 md:h-6" />
                    )}
                  </span>
                  <strong class="block text-base sm:text-lg md:text-xl text-secondary-900 dark:text-secondary-100">
                    {
                      i18n.de.hero[
                        `point_${num}_start` as keyof typeof i18n.de.hero
                      ]
                    }
                  </strong>
                </div>
                <div>
                  <span class="text-sm sm:text-base md:text-lg">
                    {
                      i18n.de.hero[
                        `point_${num}_end` as keyof typeof i18n.de.hero
                      ]
                    }
                  </span>
                </div>
              </li>
            ))
          }
        </ul>

        <div class="h-[300px] md:h-full slide-up" transition:animate="slide">
          <img
            src="/astro-sassify/images/content/hero.png"
            alt="Hero Image"
            class="w-full h-full rounded-lg shadow-lg object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>
    <div class="flex flex-wrap gap-4 mt-8 justify-center">
      <a
        href={config.external_links.strategy_call}
        class="btn-primary mt-4 px-5 md:px-6 lg:px-7 py-2.5 md:py-3"
        target="_blank"
        rel="noopener noreferrer"
      >
        {i18n.de.hero.cta}
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .fade-in svg {
    animation: float 6s ease-in-out infinite;
  }

  .bg-grid-pattern {
    background-size: 20px 20px;
    background-image: linear-gradient(
        to right,
        rgba(0, 0, 0, 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 1px, transparent 1px);
  }

  .hero-section {
    position: relative;
    overflow: hidden;
  }
</style>
