---
import { AiOutlineRobot } from "react-icons/ai"
import { BiAnalyse } from "react-icons/bi"
import { RiCustomerService2Line } from "react-icons/ri"
import { config } from "../assets/config"
import i18n from "../assets/i18n.json"
---

<section class="relative pt-20 pb-20 md:pt-24 overflow-hidden hero-section bg-primary-50 dark:bg-primary-950 dark:to-secondary-950" id="hero">
  <div class="absolute inset-0 z-0 opacity-30">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>
  <div class="container-custom relative z-10">
    <div class="slide-up" transition:animate="slide">
      <p
        class="text-lg sm:text-xl md:text-2xl text-secondary-600 dark:text-secondary-300 mb-4 font-light tracking-wide"
      >
        {i18n.de.hero.subline}
      </p>
      <h1
        class="mb-6 text-secondary-900 dark:text-white leading-tight"
      >
        {i18n.de.hero.headline_start}<br />
        <span class="text-primary-600 dark:text-primary-400"
          >- {i18n.de.hero.headline_end}</span
        >
      </h1>
      <p
        class="text-base sm:text-lg md:text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-2xl leading-relaxed"
      >
        {i18n.de.hero.intro_text}
      </p>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <ul class="space-y-6 text-secondary-600 dark:text-secondary-300">
          {
            [1, 2, 3].map((num) => (
              <li>
                <div class="flex items-center mb-2">
                  <span class="inline-block mr-4 text-primary-600 dark:text-primary-400">
                    {num === 3 ? (
                      <RiCustomerService2Line size={24} />
                    ) : num === 2 ? (
                      <BiAnalyse size={24} />
                    ) : (
                      <AiOutlineRobot size={24} />
                    )}
                  </span>
                  <strong class="block text-base sm:text-lg md:text-xl text-secondary-900 dark:text-secondary-100">
                    {
                      i18n.de.hero[
                        `point_${num}_start` as keyof typeof i18n.de.hero
                      ]
                    }
                  </strong>
                </div>
                <div>
                  <span class="text-sm sm:text-base md:text-lg">
                    {
                      i18n.de.hero[
                        `point_${num}_end` as keyof typeof i18n.de.hero
                      ]
                    }
                  </span>
                </div>
              </li>
            ))
          }
        </ul>

        <div class="h-[300px] md:h-full slide-up" transition:animate="slide">
            <iframe
              src="https://www.youtube.com/embed/dQw4w9WgXcQ"
              allow="encrypted-media"
              allowfullscreen
              class="w-full h-full rounded-lg shadow-lg aspect-video"></iframe>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap gap-4 mt-8">
      <a
        href={config.external_links.strategy_call}
        class="btn-primary text-sm sm:text-base md:text-lg px-6 sm:px-7 md:px-8 py-2 sm:py-2.5 md:py-3 rounded-full hover:shadow-lg transition-all duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        {i18n.de.hero.cta}
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .fade-in svg {
    animation: float 6s ease-in-out infinite;
  }

  .bg-grid-pattern {
    background-size: 20px 20px;
    background-image: 
      linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
  }

  .hero-section {
    position: relative;
    overflow: hidden;
  }
</style>
