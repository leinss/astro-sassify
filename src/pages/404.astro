---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import i18n from "../assets/i18n.json"
---

<Layout title="Page Not Found - Sassify">
  <Header />
  <main>
    <section class="py-20 md:py-32">
      <div class="container-custom text-center">
        <h1
          class="text-9xl font-bold text-primary-600 dark:text-primary-400 mb-8"
        >
          {i18n.de.page_not_found.title}
        </h1>
        <h2
          class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
        >
          {i18n.de.page_not_found.headline}
        </h2>
        <p
          class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto"
        >
          {i18n.de.page_not_found.text}
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
          <a href="/ki/#hero" class="btn-primary">
            {i18n.de.page_not_found.back_to_home}
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
